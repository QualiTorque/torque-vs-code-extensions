{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Colony-Service",
    "definitions": {
        "Colony-Service": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "spec_version": {
                    "type": "integer",
                    "enum": [1]
                },
                "kind": {
                    "type": "string",
                    "enum": ["TerraForm"]
                },
                "inputs": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/ServiceInputElement"
                    }
                },
                "module": {
                    "$ref": "#/definitions/Module"
                },
                "terraform_version": {
                    "type": "string"
                },
                "variables": {
                    "$ref": "#/definitions/Variables"
                },
                "outputs": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "permissions": {
                    "$ref": "#/definitions/Permissions"
                }
            },
            "optional": [
                "permissions",
                "inputs",
                "outputs",
                "variables"
            ],
            "required": [
                "kind",
                "spec_version",
                "module",
                "terraform_version"
            ],
            "title": "Colony Service"
        },
        "ServiceInputElement": {
            "anyOf": [
                {"type": "string", "title": "Input"},
                {"$ref": "#/definitions/ServiceInputSimple"}
            ]
        },
        "ServiceInputSimple": {
            "type": "object",
            "patternProperties": {
                "^[\\w\\-]+$": { 
                    "type": ["string", "number", "boolean", "null"]
                }
            },
            "title": "Value"
        },
        "Module": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "source": {
                    "type": "string"
                },
                "exclude_from_tagging": {
                    "type": "array",
                    "description": "If you must use a Terraform module containing resources that use these 'tag' definitions, you will need to explicitly tell Colony NOT to tag those resource types.",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "source"
            ],
            "title": "Module"
        },
        "Permissions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "azure": {
                    "$ref": "#/definitions/AzurePermissions"
                },
                "aws": {
                    "$ref": "#/definitions/AwsPermissions"
                }
            },
            "anyOf": [
                {"required": ["azure"]},
                {"required": ["aws"]}
            ],
            "title": "Permissions"
        },
        "AzurePermissions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "managed_identity_id": {
                    "type": "string",
                    "description": "User-assigned managed identity. Value in the format of 'resource_group_name/identity_name'",
                    "pattern": "^([\\w\\-_]+\\/[\\w\\-_]+|\\$[\\w\\-_]+)$"
                }
            },
            "required": [
                "managed_identity_id"
            ],
            "title": "Azure permissions"
        },
        "AwsPermissions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "role_arn": {
                    "type": "string"
                },
                "external_id": {
                    "type": "string"
                }
            },
            "required": [
                "role_arn"
            ],
            "title": "Aws permissions"
        },
        "Variables": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "var_file": {
                    "type": "string",
                    "default": "terraform.tfvars"
                },
                "values": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ValueElement"
                    }
                }
            },
            "anyOf": [
                {"required": ["values"]},
                {"required": ["var_file"]}
            ],
            "title": "Variables"
        },
        "ValueElement": {
            "anyOf": [
                {"type": "string", "title": "Value"},
                {"$ref": "#/definitions/ValueSimple"}
            ]
        },
        "ValueSimple": {
            "type": "object",
            "patternProperties": {
                "^[\\w\\-]+$": { 
                    "type": ["string", "number", "boolean"]
                }
            },
            "title": "Value"
        }
    }
}
