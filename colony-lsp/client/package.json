{
	"name": "colony-extension-client",
	"description": "A VS Code extension for the Colony yaml syntax. Provides YAML schema verification, auto-complete, highlight problems and much more.",
	"author": "Quali",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "Quali",
	"repository": {
		"type": "git",
		"url": "https://github.com/qualisystemslab/colony-vs-code-extensions"
	},
	"engines": {
		"vscode": "^1.55.0"
	},
	"icon": "icon/icon216.png",
	"keywords": [
		"colony",
		"yaml",
		"autocompletion",
		"validation"	
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:yaml"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Colony Server Configuration",
			"properties": {
				"colonyServer.exampleConfiguration": {
					"scope": "resource",
					"type": "string",
					"default": "You can override this message."
				}
			}
		},
		"grammars": [
			{
			  "path": "./syntaxes/colony.tmLanguage.json",
			  "scopeName": "source.yaml"
			}
		]
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"webpack": "webpack --mode development",
		"postinstall": "echo npm install"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/node": "^12.12.21",
		"@types/uuid": "^3.4.6",
		"@types/vscode": "^1.55.0",
		"ts-loader": "^6.2.1",
		"typescript": "^4.2.4",
		"vscode-test": "^1.3.0",
		"webpack": "^5.37.1",
		"webpack-cli": "^4.7.0"
	}
}
