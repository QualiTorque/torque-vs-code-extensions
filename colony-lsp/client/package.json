{
	"name": "colony-language-extension",
	"displayName": "Colony Language Extension",
	"description": "A VS Code extension for the Colony yaml syntax. Provides YAML schema verification, auto-complete, highlight problems and much more.",
	"author": "Quali",
	"license": "MIT",
	"version": "0.0.2",
	"publisher": "Quali",
	"repository": {
		"type": "git",
		"url": "https://github.com/qualisystemslab/colony-vs-code-extensions"
	},
	"engines": {
		"vscode": "^1.55.0"
	},
	"icon": "icon/icon_q_square.png",
	"keywords": [
		"colony",
		"yaml",
		"autocompletion",
		"validation"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:yaml"
	],
	"contributes": {
		"commands": [
			{
				"title": "Add Torque Profile",
				"command": "add_torque_profile"				
			},
			{
				"title": "Validate Torque Blueprint",
				"command": "validate_torque_blueprint"				
			},
			{
				"title": "Start Torque Sandbox",
				"command": "start_torque_sandbox"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Colony Language Configuration",
			"properties": {
				"colony.connections": {
					"type": "array",
					"default": [
					  {
						"profile": "{{put-profile-name-here}}",
						"account": "{{put-account-name-here}}",
						"space": "{{put-space-here}}",
						"token": "{{put-token-here}}"
					  }
					],
					"description": "Connection profiles for Torque",
					"items": {
					  "type": "object",
					  "properties": {
						"profile": {
						  "type": "string",
						  "default": "{{put-profile-name-here}}",
						  "description": "Profile Name"
						},
						"account": {
						  "type": "string",
						  "default": "{{put-account-name-here}}",
						  "description": "Account ID"
						},
						"space": {
						  "type": "string",
						  "default": "{{put-space-here}}",
						  "description": "Torque Space"
						},
						"token": {
						  "type": "string",
						  "default": "{{put-token-here}}",
						  "description": "Torque Token"
						}
					  }
					},
					"scope": "resource"
				}
			}
		},
		"languages": [
			{
				"id": "yaml",
				"aliases": [
					"YAML",
					"yaml"
				],
				"extensions": [
					".yaml"
				]
			}
		],
		"grammars2": [
			{
				"language": "yaml",
				"path": "./syntaxes/colony.tmLanguage.json",
				"scopeName": "source.yaml"
			}
		],
		"configurationDefaults": {
			"[yaml]": {
				"editor.semanticHighlighting.enabled": true
			}
		}
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile && echo copying server && cp -R ../server out/server",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"webpack": "webpack --mode development",
		"vscepack": "vsce package",
		"postinstall": "echo post-install"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/node": "^12.12.21",
		"@types/uuid": "^3.4.6",
		"@types/vscode": "^1.55.0",
		"ts-loader": "^6.2.1",
		"typescript": "^4.2.4",
		"vscode-test": "^1.3.0",
		"webpack": "^5.37.1",
		"webpack-cli": "^4.7.0"
	}
}
