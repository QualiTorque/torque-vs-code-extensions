{
	"name": "torque-language-extension",
	"displayName": "Torque",
	"description": "A VS Code extension for the Torque YAML syntax. Provides YAML schema verification, auto-complete, highlight problems and much more.",
	"author": "Quali",
	"license": "MIT",
	"version": "0.0.7",
	"publisher": "Quali-Torque",
	"repository": {
		"type": "git",
		"url": "https://github.com/QualiTorque/torque-vs-code-extensions"
	},
	"engines": {
		"vscode": "^1.55.0"
	},
	"icon": "icon/icon_q_square.png",
	"galleryBanner": {
		"color": "#009bda",
		"theme": "dark"
	},
	"keywords": [
		"quali",
		"torque",
		"yaml",
		"autocompletion",
		"validation"
	],
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"activationEvents": [
		"onLanguage:yaml",
		"onView:blueprintsExplorerView"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "torque-view-container",
					"title": "Torque",
					"icon": "icon/Quali_Q_white.svg"
				}
			]
		},
		"views": {
			"torque-view-container": [
				{
					"id": "blueprintsExplorerView",
					"name": "Blueprints Explorer",
					"contextualTitle": "Blueprints Explorer"
				},
				{
					"id": "profilesView",
					"name": "Profiles"
				}
			]
		},
		"commands": [
			{
				"command": "blueprintsExplorerView.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "profilesView.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "profilesView.addProfile",
				"title": "Add Profile",
				"icon": {
					"light": "resources/light/add.svg",
					"dark": "resources/dark/add.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "blueprintsExplorerView.refreshEntry",
					"group": "navigation",
					"when": "view == blueprintsExplorerView"
				},
				{
					"command": "profilesView.refreshEntry",
					"group": "navigation",
					"when": "view == profilesView"
				},
				{
					"command": "profilesView.addProfile",
					"group": "navigation",
					"when": "view == profilesView"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Torque Server Configuration",
			"properties": {
				"Platform Name": {
					"type": "string",
					"description": "The platform name you use",
					"default": "torque",
					"scope": "application"
				},
				"torque.connections": {
					"type": "array",
					"default": [
					  {
						"profile": "{{put-profile-name-here}}",
						"account": "{{put-account-name-here}}",
						"space": "{{put-space-here}}",
						"token": "{{put-token-here}}"
					  }
					],
					"description": "Connection profiles for Torque",
					"items": {
					  "type": "object",
					  "properties": {
						"profile": {
						  "type": "string",
						  "default": "{{put-profile-name-here}}",
						  "description": "Profile Name"
						},
						"account": {
						  "type": "string",
						  "default": "{{put-account-name-here}}",
						  "description": "Account ID"
						},
						"space": {
						  "type": "string",
						  "default": "{{put-space-here}}",
						  "description": "Torque Space"
						},
						"token": {
						  "type": "string",
						  "default": "{{put-token-here}}",
						  "description": "Torque Token"
						}
					  }
					},
					"scope": "resource"
				}
			}
		},
		"languages": [
			{
				"id": "yaml",
				"aliases": [
					"YAML",
					"yaml"
				],
				"extensions": [
					".yaml"
				]
			}
		],
		"configurationDefaults": {
			"[yaml]": {
				"editor.semanticHighlighting.enabled": true
			}
		}
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile && echo copying server && cp -R ../server out/server && cp ../README.md ./README.md",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"webpack": "webpack --mode development",
		"vscepack": "vsce package",
		"postinstall": "echo post-install"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/node": "^12.12.21",
		"@types/uuid": "^3.4.6",
		"@types/vscode": "^1.55.0",
		"ts-loader": "^6.2.1",
		"typescript": "^4.2.4",
		"vscode-test": "^1.3.0",
		"webpack": "^5.37.1",
		"webpack-cli": "^4.7.0"
	}
}
