{
	"name": "torque-language-extension",
	"displayName": "Torque",
	"description": "A VS Code extension for the Torque YAML syntax. Provides YAML schema verification, auto-complete, highlight problems and much more.",
	"author": "Quali",
	"license": "MIT",
	"version": "0.0.7",
	"publisher": "Quali-Torque",
	"repository": {
		"type": "git",
		"url": "https://github.com/QualiTorque/torque-vs-code-extensions"
	},
	"engines": {
		"vscode": "^1.55.0"
	},
	"icon": "icon/icon_q_square.png",
	"galleryBanner": {
		"color": "#009bda",
		"theme": "dark"
	},
	"keywords": [
		"quali",
		"torque",
		"yaml",
		"autocompletion",
		"validation"
	],
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"activationEvents": [
		"onLanguage:yaml",
		"onView:blueprintsExplorerView"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "torque-view-container",
					"title": "Torque",
					"icon": "icon/Quali_Q_white.svg"
				}
			]
		},
		"views": {
			"torque-view-container": [
				{
					"id": "blueprintsExplorerView",
					"name": "Blueprints Explorer",
					"contextualTitle": "Blueprints Explorer"
				},
				{
					"id": "profilesView",
					"name": "Profiles"
				}
			]
		},
		"commands": [
			{
				"command": "blueprintsExplorerView.refreshEntry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "profilesView.refreshEntry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "profilesView.setAsDefaultEntry",
				"title": "Set as default",
				"icon": "$(check)"
			},
			{
				"command": "profilesView.removeEntry",
				"title": "Delete profile",
				"icon": "$(close)"
			},
			{
				"command": "profilesView.openLoginForm",
				"title": "Add profile",
				"icon": "$(add)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "blueprintsExplorerView.refreshEntry",
					"group": "navigation",
					"when": "view == blueprintsExplorerView"
				},
				{
					"command": "profilesView.refreshEntry",
					"group": "navigation",
					"when": "view == profilesView"
				},
				{
					"command": "profilesView.openLoginForm",
					"group": "navigation",
					"when": "view == profilesView"
				}
			],
			"view/item/context": [
				{
					"command": "profilesView.setAsDefaultEntry",
					"when": "view == profilesView && viewItem == space",
					"group": "inline"
				},
				{
					"command": "profilesView.removeEntry",
					"when": "view == profilesView && viewItem == space",
					"group": "inline"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Torque Server Configuration",
			"properties": {
				"torque.default_profile": {
					"type": "string",
					"description": "The deafult profile/space to use",
					"default": "default",
					"scope": "resource"
				}				
			}
		},
		"languages": [
			{
				"id": "yaml",
				"aliases": [
					"YAML",
					"yaml"
				],
				"extensions": [
					".yaml"
				]
			}
		],
		"configurationDefaults": {
			"[yaml]": {
				"editor.semanticHighlighting.enabled": true
			}
		}
	},
	"extensionDependencies": [
		"redhat.vscode-yaml"
	],
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile && echo copying server && cp -R ../server out/server && cp ../README.md ./README.md",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"webpack": "webpack --mode development",
		"vscepack": "vsce package",
		"postinstall": "echo post-install"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/node": "^12.12.21",
		"@types/uuid": "^3.4.6",
		"@types/vscode": "^1.55.0",
		"ts-loader": "^6.2.1",
		"typescript": "^4.2.4",
		"vscode-test": "^1.3.0",
		"webpack": "^5.37.1",
		"webpack-cli": "^4.7.0"
	}
}
